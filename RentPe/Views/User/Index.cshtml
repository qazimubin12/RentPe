@model RentPe.ViewModels.UsersListingViewModel

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <h2>Users</h2>
            <div class="input-group">
                <a href="@Url.Action("Register", "User")" class="btn btn-primary" type="button"><i class="fa fa-plus mr-1"></i> Create</a>
                <a class="btn btn-primary" href="@Url.Action("Index", "User")"><i class="fa fa-refresh"></i> </a>

            </div>
        </div>
        <div class="col-lg-4">
            <form>
                <div class="input-group-append">
                    <input type="text" name="searchterm" class="form-control" placeholder="Search." value="@Model.SearchTerm">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-search mr-1"></i></button>

                </div>
            </form>
        </div>
    </div>

  

        <div class="row" style="margin-top:10px;">
            <div class="col col-lg-12">
                @{
                    Html.RenderPartial("_Listing", Model);
                }
            </div>
            
        </div>

        <div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
            </div>
        </div>
    </div>
<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                $("#actionModal .modal-dialog").html(response);
            });
    });
</script>