@model RentPe.ViewModels.UsersListingViewModel
@{
    ViewBag.Title = "Index";
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.Users != null)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>

                                <th>
                                    Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Contact
                                </th>
                              
                                <th colspan="4">
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Users)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>
                                        <button data-bs-href="@Url.Action("Action", "User", new { ID = item.Id })" type="button" class="data-btn btn btn-sm btn-info btn-icon-text" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="mdi mdi-pencil"></i> EDIT</button>
                                        <button data-bs-href="@Url.Action("Delete", "User", new { ID = item.Id })" type="button" class="data-btn btn btn-sm btn-danger btn-icon-text" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="mdi mdi-delete"></i>DELETE</button>
                                        <button data-bs-href="@Url.Action("UserRoles", "User", new { ID = item.Id })" type="button" class="data-btn btn btn-sm btn-success btn-icon-text" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="mdi mdi-account-details"></i>ROLES</button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
            }
    </div>
</div>

<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                $("#actionModal .modal-dialog").html(response);
            });
        });
</script>



