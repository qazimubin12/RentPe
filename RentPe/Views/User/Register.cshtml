@model RentPe.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<style>
  
</style>

            <div class="login_register_wrap section">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xl-6 col-md-10">
                            <div class="login_wrap">
                                <div class="padding_eight_all bg-white">
                                    <div class="heading_s1">
                                        <h3>Create an Account</h3>
                                    </div>
                                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group mb-3">
                                        <label class="col-sm-3 col-form-label">Name</label>

                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group mb-3">
                                            <label class="col-sm-3 col-form-label">Email</label>

                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>


                                        <div class="form-group mb-3">
                                            <label class="col-sm-3 col-form-label">Role</label>
                                                <select name="RoleID" class="form-select">
                                                    @foreach (var item in Model.Roles)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }


                                                </select>


                                        </div>

                                        <div class="form-group mb-3">
                                            <label class="col-sm-3 col-form-label">Passowrd</label>

                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        </div>


                                        <div class="form-group mb-3">
                                            <label class="col-sm-12 col-form-label">Confirm Password</label>

                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        </div>

                                

                                        <div class="form-group mb-3">
                                            <label class="col-sm-3 col-form-label">Contact</label>

                                            @Html.TextBoxFor(m => m.Contact, new { @class = "form-control" })
                                        </div>



                                        <div class="form-group mb-3">
                                            <button type="submit" class="btn btn-fill-out rounded-0"  name="register">REGISTER</button>
                                        </div>
                                    }
                                    <div class="form-note text-center">Already have an account? <a href="@Url.Action("Login","Account")">Log in</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>









       