@model RentPe.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<style>
    label{
        color:black;
    }

    #modalregister {
        background-color: #F4F5FA;
    }
</style>

<div id="modalregister" class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">
            <span>Create New Dispatcher</span>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Full Name</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Email</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Role</label>
                        <div class="col-sm-9">
                            <select name="RoleID" class="form-control">
                                @foreach (var item in Model.Roles)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }


                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Password</label>
                        <div class="col-sm-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>


                </div>
                <div class="col-md-12">
                    <div class="form-group row">
                        <label style="padding-top: 0px;" class="col-sm-3 col-form-label">Confirm Password</label>
                        <div class="col-sm-9">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Contact</label>
                        <div class="col-sm-9">
                            @Html.TextBoxFor(m => m.Contact, new { @class = "form-control" })
                        </div>


                    </div>
                </div>
            </div>

            <input type="submit" style="color:white;" class="btn btn-rounded btn-block btn-inverse-dark btn-fw" value="Register" />

        }


    </div>
</div>
   


