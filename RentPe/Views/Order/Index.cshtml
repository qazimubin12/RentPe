@model RentPe.ViewModels.OrderListingViewModel
<div class="container">
    <div class="row">
        <div class="col-lg-8">

            <h2>Orders</h2>
            <div class="input-group">
                    <button onclick="window.location.href='@Url.Action("Action", "Order")'" class="btn btn-outline-success mr-1" type="button"><i class="fa fa-plus mr-1"></i> Create</button>
                <a class="btn btn-primary" href="@Url.Action("Index", "Order")"><i class="fa fa-refresh"></i> </a>
            </div>

            

        </div>
        <div class="col-lg-4">
            <form>
                <div class="input-group-append">
                    <input type="text" name="searchterm" class="form-control" placeholder="Search." value="@Model.SearchTerm">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-search mr-1"></i></button>

                </div>
            </form>
            <div class="mt-3">
                <h6><b>Video Status:</b> <span class="badge bg-success mx-1 p-1">Received</span><span class="badge bg-danger mx-1 p-1">Not Received</span><span class="badge bg-warning mx-1 p-1">Pending</span></h6>
            </div>
            
        </div>
    </div>
    <div class="row" style="margin-top:10px;">
        <div class="col col-lg-12">
            @{
                Html.RenderPartial("_Listing", Model);
            }
        </div>

    </div>

</div>
<div class="modal fade" id="actionModal" tabindex="-1" RentIem="dialog">
    <div class="modal-dialog" RentIem="document">
    </div>
</div>

