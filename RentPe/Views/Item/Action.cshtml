@model RentPe.ViewModels.ItemActionViewModel

@{
    ViewBag.Title = "Action";
}

<form id="actionForm">
    <div class="row">
        <div class="card col-12">
            <div class="card-body">
                <h2 class="card-title">Item Create</h2>
                <hr />

                <div class="row">
                    <div class="col-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">Item Name</span>
                            </div>
                            <input value="@Model.ItemName" id="ItemName" name="ItemName" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">Item Description</span>
                            </div>
                            <textarea id="ItemDescription" name="ItemDescription" class="form-control">@Model.ItemDescription</textarea>
                        </div>
                    </div>
                    <div class="col-4">
                        <select value="@Model.ItemCategory" id="ItemCategory" name="ItemCategory" class="form-control" tabindex="-1" aria-hidden="true">
                            <option>Select Item Category</option>
                        </select>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">Renting Period</span>
                            </div>
                            <input value="@Model.RentingPeriod" id="RentingPeriod" name="RentingPeriod" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-4">
                        <select value="@Model.Negotiable" id="Negotiable" name="Negotiable" class="form-control" tabindex="-1" aria-hidden="true">
                            <option>Select Negotiable</option>
                            <option value="1">Yes</option>
                            <option value="2">No</option>
                        </select>
                    </div>

                    <div class="col-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">Available From</span>
                            </div>
                            <input value="@Model.AvailableFrom" id="AvailableFrom" name="AvailableFrom" type="datetime-local" class="form-control">
                        </div>
                    </div>
                </div>
                <br />
                <!-- Third Column -->
                <div class="row">

                    <div class="col-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">Available To</span>
                            </div>
                            <input value="@Model.AvailableTo" id="AvailableTo" name="AvailableTo" type="datetime-local" class="form-control">
                        </div>
                    </div>
                    <div class="col-4">
                        <select value="@Model" id="Brand" name="Brand" class="form-control" tabindex="-1" aria-hidden="true">
                            <option>Select Item Authenticity</option>
                            <option value="1">Branded</option>
                            <option value="2">Replica</option>
                            <option value="3">Local</option>
                        </select>
                    </div>

                    <div class="col-4">
                        <select value="@Model.Condition" id="Condition" name="Condition" class="form-control" tabindex="-1" aria-hidden="true">
                            <option>Select Item Condition</option>
                            <option value="1">New</option>
                            <option value="2">Slightly Used</option>
                            <option value="3">Used</option>
                        </select>
                    </div>
                </div>
                <br />
                <!-- Second row -->
                <div class="row">
                    <!-- First Column -->
                    <div class="col-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="">Location</span>
                            </div>
                            <input value="@Model.Location" id="Location" name="Location" type="text" class="form-control">
                        </div>
                    </div>
                    <div class="col-4">
                        <select value="@Model.Featured" id="Featured" name="Featured" type="text" class="form-control" tabindex="-1" aria-hidden="true">
                            <option>Select Featuring</option>
                            <option value="1">Yes</option>
                            <option value="2">No</option>
                        </select>
                    </div>
                    <div class="col-4">
                        <div class="ml-2 form-group row">
                            <label class="col-form-label col-4 pr-0">Select Images</label>
                            <div class="col-8">
                                <input class="form-control" type="file" id="files" name="files" multiple>
                            </div>
                        </div>
                        </div>
                    </div>
                    <br />
                    <!-- Third row -->
                    @*<div class="row">
                        <div class="col-4">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="">Label</span>
                                </div>
                                <input value="@Model.Label" id="Label" name="Label" type="text" class="form-control">
                            </div>
                        </div>

                    </div>*@

                </div>
            <div class="card-footer">
                @if (Model.ID != 0)
                {
                    <button id="actionButton" type="button" class="btn btn-primary"><i class="fa fa-save mr-1"></i> Update</button>
                }
                else
                {
                    <button id="actionButton" type="button" class="btn btn-primary"><i class="fa fa-save mr-1"></i> Save</button>
                }
                <a href="@Url.Action("Index","Item")" type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times mr-1"></i> Close</a>
            </div>
        </div>

    </div>
</form>

<script>
   $("#actionButton").click(function () {
    $.ajax({
        url: '@Url.Action("Action", "Item")',
        type: "POST",
        data: $("#actionForm").serialize()
    })
    .done(function (response) {
        if (response.success) {
            window.location.href = '@Url.Action("Index", "Item")';
        } else {
            $(".errorDiv").html(response.Message);
        }
    })
    .fail(function (xhr, status, error) {
        console.error(xhr.responseText);
    });
});

</script>

