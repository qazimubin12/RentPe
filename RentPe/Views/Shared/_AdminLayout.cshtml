<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel="manifest" href="~/manifest.json" />
    <meta name="theme-color" content="#F4A100" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title> Dashboard</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/template/RentPeContent/RentPeLogoMobile.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/template/AdminTemplate/assets/css/bootstrap.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/Content/template/AdminTemplate/assets/css/font-awesome.min.css">

    <!-- Feathericon CSS -->
    <link rel="stylesheet" href="~/Content/template/AdminTemplate/assets/css/feathericon.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/Content/template/AdminTemplate/assets/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

    <!--[if lt IE 9]>
        <script src="~/Content/template/AdminTemplate/assets/js/html5shiv.min.js"></script>
        <script src="~/Content/template/AdminTemplate/assets/js/respond.min.js"></script>
    <![endif]-->


</head>

<body>

    <!-- Main Wrapper -->
    <div class="main-wrapper">

        <!-- Header -->
        <div class="header">

            <!-- Logo -->
            <div class="header-left">
                <a href="@Url.Action("","")" class="logo">
                    <img src="~/Content/template/RentPeContent/RentPeLogoDesktop.png" alt="Logo">
                </a>
                <a href="@Url.Action("","")" class="logo logo-small">
                    <img src="~/Content/template/RentPeContent/RentPeLogoMobile.png" alt="Logo" width="30" height="30">
                </a>
            </div>
            <!-- /Logo -->

            <a href="javascript:void(0);" id="toggle_btn">
                <i class="fe fe-text-align-center"></i>
            </a>



            <!-- Mobile Menu Toggle -->
            <a class="mobile_btn" id="mobile_btn">
                <i class="fe fe-text-align-left"></i>
            </a>
            <!-- /Mobile Menu Toggle -->
            <!-- Header Right Menu -->
            <ul class="nav user-menu">
                <li class="nav-item  go-to-site">
                    <a class="nav-link" aria-expanded="false" role="button" href="@Url.Action("","")"> <b><i class="fa fa-home"></i> Go to Main Page</b></a>
                </li>

                <!-- App Lists -->
                
                <!-- /Notifications -->
                <!-- User Menu -->
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                        <span class="user-img"><img class="rounded-circle" src="~/Content/template/AdminTemplate/assets/img/profiles/avatar-01.jpg" width="31" alt="@User.Identity.Name"></span>
                    </a>
                    <div class="dropdown-menu">
                        <div class="user-header">
                            <div class="avatar avatar-sm">
                                <img src="~/Content/template/AdminTemplate/assets/img/profiles/avatar-01.jpg" alt="User Image" class="avatar-img rounded-circle">
                            </div>
                            <div class="user-text">
                                <h6>@User.Identity.Name</h6>
                                @if (User.IsInRole("Admin"))
                                {
                                    <p class="text-muted mb-0">Administrator</p>
                                }
                                else
                                {
                                    <p class="text-muted mb-0">User</p>
                                }
                            </div>
                        </div>
                        <a class="dropdown-item" href="@Url.Action("ManageProfile","Account")">My Profile</a>
                        <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                    </div>
                </li>
                <!-- /User Menu -->

            </ul>
            <!-- /Header Right Menu -->

        </div>

        <!-- /Header -->
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">
                            <span>Admin Menu</span>
                        </li>
                        <li id="DashboardTAB">
                            <a href="@Url.Action("Dashboard","Admin")"><i class="fe fe-home text-primary"></i> <span>Dashboard</span></a>
                        </li>
                        <li id="RoleTAB">
                            <a href="@Url.Action("Index","Role")"><i class="fe fe-user-minus text-success"></i> <span>Roles</span></a>
                        </li>
                        <li id="UserTAB">
                            <a href="@Url.Action("Index","User")"><i class="fe fe-users text-success"></i> <span>Users</span></a>
                        </li>
                        @*<li>
            <a href="@Url.Action("Index","Item")"><i class="fe fe-shopping-bag text-info"></i> <span> Product</span></a>
        </li>*@

                        <li id="AdTAB">
                            <a href="@Url.Action("Index","Ad")"><i class="fe fe-book text-warning"></i> <span>Ads</span></a>
                        </li>
                        <li id="CategoryTAB">
                            <a href="@Url.Action("Index","ItemCategory")"><i class="fe fe-layer text-success"></i> <span>Categories</span></a>
                        </li>
                        <li id="CustomOfferTAB">
                            <a href="@Url.Action("Index","CustomOffer")"><i class="fe fe-layer text-info"></i> <span>Custom Offers</span></a>
                        </li>
                        <li id="OrderTAB">
                            <a href="@Url.Action("Index","Order")"><i class="fe fe-cart text-warning"></i> <span>Orders</span></a>
                        </li>
                        <li id="ChatsTAB">
                            <a href="@Url.Action("Index","Chat")"><i class="fe fe-messanger text-info"></i> <span>Chats</span></a>
                        </li>

                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fe fe-logout text-danger"></i> <span>Logout</span></a>
                        </li>



                    </ul>
                </div>
            </div>
        </div>
        <!-- /Sidebar -->
        <!-- Page Wrapper -->
        <div class="page-wrapper">
            <div class="content container-fluid">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()}
                @RenderBody()
               
            </div>
        </div>
        <!-- /Page Wrapper -->

    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', function () {
                navigator.serviceWorker.register('/service-worker.js').then(function (registration) {
                    // Registration was successful
                    console.log('ServiceWorker registration successful with scope: ', registration.scope);
                }, function (err) {
                    // registration failed :(
                    console.log('ServiceWorker registration failed: ', err);
                });
            });
        }

    </script>
    <script src="~/Content/template/AdminTemplate/assets/js/jquery-3.2.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/Content/template/AdminTemplate/assets/js/popper.min.js"></script>
    <script src="~/Content/template/AdminTemplate/assets/js/bootstrap.min.js"></script>

    <!-- Slimscroll JS -->
    <script src="~/Content/template/AdminTemplate/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    @*<script src="~/Content/template/AdminTemplate/assets/js/chart.js"></script>
        <script src="~/Content/template/AdminTemplate/assets/js/Chart.min.js"></script>*@

    <!-- Custom JS -->
    <script src="~/Content/template/AdminTemplate/assets/js/script.js"></script>

</body>
</html>

<script>
    

        $(document).ready(function () {

            var data = '@Session["ACTIVERADMIN"]';
            if (data == 'Dashboard') {
                var elem = document.getElementById("DashboardTAB");

                elem.className += ' active';
            }

            if (data == 'User') {
                var elem = document.getElementById("UserTAB");
                elem.className += ' active';
            }

            if (data == 'Ad') {
                var elem = document.getElementById("AdTAB");
                elem.className += ' active';
            }


            if (data == 'CustomOffer') {
                var elem = document.getElementById("CustomOfferTAB");
                elem.className += ' active';
            }
            if (data == 'Order') {
                var elem = document.getElementById("OrderTAB");
                elem.className += ' active';
            }
            if (data == 'Category') {
                var elem = document.getElementById("CategoryTAB");
                elem.className += ' active';
            }
            if (data == 'Chat') {
                var elem = document.getElementById("ChatsTAB");
                elem.className += ' active';
            }





       });

    $(document).ready(function () {
        $("body").mouseover(function () {
            $("div[style='position: fixed; z-index: 999999; width: 100%; height: 55px; padding: 10px; background-color: rgba(17, 16, 16, 0.93); bottom: 0px; left: 0px; right: 0px; display: flex; align-items: center; justify-content: center; gap: 20px; color: white;']").hide();
        });
    });


</script>