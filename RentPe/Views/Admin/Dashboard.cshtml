@model RentPe.ViewModels.AdminViewModel
@{
    ViewBag.Title = "Dashboard";
}

<style>
    .scroll {
        overflow-x: scroll;
        width: contain;
    }

    td {
        width: 200px;
    }
    .button {
        display: inline-block;
        padding: 15px 30px;
        background-color: #337ab7;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        font-size: 20px;
        transition: background-color 0.3s;
    }

        .button:hover {
            background-color: #23527c;
        }

    .dashboard-image {
        margin-top: 40px;
    }
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
    }
    .features {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-bottom: 40px;
    }

    .feature-card {
        width: 200px;
        padding: 20px;
        margin: 10px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s;
    }

        .feature-card:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

    .feature-icon {
        font-size: 48px;
        color: #337ab7;
        margin-bottom: 20px;
    }

    .feature-title {
        font-size: 20px;
        color: #333;
        margin-bottom: 10px;
    }

    .feature-description {
        font-size: 14px;
        color: #666;
    }
    .feature-title {
        font-size: 24px;
        color: #333;
        margin-bottom: 10px;
    }
</style>
