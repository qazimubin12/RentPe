    <h1 style="color:orange" class="text-center">Welcome @Model.SignedInUser.Name</h1>

</div>*@
<div class="container">
    <h1>Welcome <b>@Model.SignedInUser.Name</b> to Your Dashboard</h1>
    <div class="feature-title mb-0 mt-3">
        <p class="mb-1">What you can do:</p>
     </div>
    <div class="features">
        <div class="feature-card">
            <span class="feature-icon">&#128100;</span>
            <div class="feature-title">Roles</div>
            <div class="feature-description">Manage user roles and permissions</div>
        </div>
        <div class="feature-card">
            <span class="feature-icon">&#128101;</span>
            <div class="feature-title">Users</div>
            <div class="feature-description">Manage registered users</div>
        </div>
        <div class="feature-card">
            <span class="feature-icon">&#128203;</span>
            <div class="feature-title">Ads</div>
            <div class="feature-description">Manage rental ads</div>
        </div>
        <div class="feature-card">
            <span class="feature-icon">&#127752;</span>
            <div class="feature-title">Categories</div>
            <div class="feature-description">Manage item categories</div>
        </div>
        <div class="feature-card">
            <span class="feature-icon">&#128203;</span>
            <div class="feature-title">Custom Offers</div>
            <div class="feature-description">Manage custom rental offers</div>
        </div>
        <div class="feature-card">
            <span class="feature-icon">&#128722;</span>
            <div class="feature-title">Orders</div>
            <div class="feature-description">Manage rental orders</div>
        </div>
    </div>
</div>